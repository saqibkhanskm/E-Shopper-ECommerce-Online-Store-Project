@using Business_Layer_BL_.DTOS.Combine_DTOS.F_User_UserCredsDTOS;
@using Shared.Enums.Operationstatus;
@model UserAndUserCredsDTOS;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Account</title>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: "Poppins", sans-serif;
            margin: 0;
            padding: 40px; 
            background: #f5f5f5;
            display: flex;
            justify-content: center;
            align-items: flex-start; 
        }

        .signup-card {
            width: 600px; 
            background: #fff;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 4px 25px rgba(0,0,0,0.08);
        }

        .signup-title {
            text-align: center;
            margin-bottom: 18px;
            font-size: 24px;
            font-weight: 600;
            color: #222;
        }

     
        .form-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 12px 20px;
        }

        .input-box {
            margin-bottom: 12px;
        }

            .input-box label {
                display: block;
                margin-bottom: 4px;
                font-weight: 500;
                color: #333;
                font-size: 13px;
            }

            .input-box input,
            .input-box select {
                width: 100%;
                padding: 10px;
                border-radius: 7px;
                border: 1px solid #ddd;
                outline: none;
                font-size: 14px;
            }

        .signup-btn {
            width: 100%;
            padding: 12px;
            font-size: 15px;
            border-radius: 7px;
            border: none;
            cursor: pointer;
            background: #ff6f61;
            font-weight: 600;
            color: #fff;
            transition: 0.3s ease;
            margin-top: 12px;
        }

            .signup-btn:hover {
                background: #ff473b;
                transform: translateY(-2px);
            }
    </style>
</head>
<body>

    <div class="signup-card">
        <h2 class="signup-title">Create Your Account</h2>

      
        <form id="RegForm" onsubmit="UserReg(event)">

           
            <div class="form-grid">

                <div class="input-box">
                    <label>UserName</label>
                    <input type="text" name="UserName" placeholder="Enter UserName" />
                </div>

                <div class="input-box">
                    <label>Email Address</label>
                    <input type="email" name="Email" placeholder="Example: user@gmail.com" />
                </div>

                <div class="input-box">
                    <label>Password</label>
                    <input type="password" name="Password" placeholder="Enter password" />
                </div>

                <div class="input-box">
                    <label>Confirm Password</label>
                    <input type="password" name="ReEnterPassword" placeholder="Re-enter password" />
                </div>

                <div class="input-box">
                    <label>Contact Number</label>
                    <input type="text" name="Contact" placeholder="Enter contact number" />
                </div>

                <div class="input-box">
                    <label>City</label>
                    <input type="text" name="City" placeholder="Enter city" />
                </div>

                <div class="input-box">
                    <label>Country</label>
                    <select name="Country">
                        <option value="">-- Select Country --</option>
                        <
                        <option value="+92">Pakistan (+92)</option>
                        <option value="+91">India (+91)</option>
                        <option value="+880">Bangladesh (+880)</option>
                      
                    </select>
                </div>

                <div class="input-box">
                    <label>Gender</label>
                    <select name="Gender">
                        <option value="">-- Select Gender --</option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                        <option value="other">Other</option>
                    </select>
                </div>

            </div>

            <button class="signup-btn">Register Now</button>

        </form>
    </div>

</body>
</html>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>

    function UserReg(event)
    {
        event.preventDefault();      

        var form = document.getElementById("RegForm");  
        var formdata = new FormData(form);

        $.ajax({
            type: 'POST',
            url: "/Users/UserAccount/UserRegistration",
            data: formdata,
            contentType: false,     
            processData: false,     

            success: function (result) {
                if (result == "@OperationStatusEnum.Success") {
                    alert("User Registered Successfully");
                }
                else {
                    alert("Failed to Register");
                }
            }
        });

    }

</script>
